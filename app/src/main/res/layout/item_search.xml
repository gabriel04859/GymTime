<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_item"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewLogoItem"
            android:layout_margin="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_fitness"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewLogoItem"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewNameGymItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorBlackOpaco"
                android:fontFamily="@font/yantramanav"
                android:text="Nome"
                android:textSize="19sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewCityGymItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/yantramanav"
                android:text="Cidade"
                android:textStyle="bold" />


        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>